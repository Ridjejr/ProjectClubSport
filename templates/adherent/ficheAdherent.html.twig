{% extends 'base.html.twig' %}

{% block title %}Fiche adherent{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Fiche de l'adherent</h1>
<hr>
<div class="row pt-2">
    {% set nbReservations = leAdherent.reservations|length %} 
        <div class="card mb-3">
            <h4 class="card-header"> {{leAdherent.nom}} </h4>
            <div class="row">
                <div class="col-3 d-flex align-items-center mx-auto">
                    <img class="avatar mx-auto d-block" style="height: auto; width: 200px;  display: block;" src=" {{leAdherent.image}} " alt="Card image">
                </div>    
                <div class="col">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="" class="badge badge-success">{{nbReservations}}{% if nbReservations> 1 %} reservations {% else %} reservation{% endif %}</a>
                        </h5>
                    </div>
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> {{ leAdherent.email}} </li>
                    </ul>             
                </div>
            </div>

        </div>


</div>
{% endblock %}
