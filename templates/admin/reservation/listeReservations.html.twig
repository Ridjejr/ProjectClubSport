{% extends 'base.html.twig' %}

{% block title %}Reservation Magic Park{% endblock %}

{% block body %}
<h3 class="pt-2 text-center">Gestion des Reservation</h3>
<a href=" {{path('admin_reservation_ajout')}} " class="btn btn-info">Ajouter une r√©servation</a>
<hr>
<table class="table table-hover mx-auto">
    <thead>
        <tr>
            <th scope="col-3">Nom</th>
            <th scope="col-3">Date</th>
            <th scope="col-1">Heure</th>
            <th scope="col-1">Coach</th>
        </tr>
    </thead>
    <tbody>
    {% for laReservation in leAdherent.reservations %}
            <tr>
                <td>{{leAdherent.nom}}</td>
                <td>{{laReservation.DateR|date("d/m/Y")}}</td>
                <td>{{laReservation.HeureR|date("H:i:s")}}</td>
                <td>{{laReservation.coach.nom}}</td>
            </tr>   
            <td class="col-2">
                <a href=" {{path('admin_reservation_modif', {'id': laReservation.id})}} " class="btn btn-primary"><i class="fas fa-pen"></i></a>
                <a class="btn btn-danger"
                data-toggle="modal"
                data-target="#modalSimple"
                data-titre="Suppression d'une reservation"
                data-message="Etes vous sur de vouloir supprimer la reservation : {{ leAdherent.id.nom }}"
                data-libelleBouton="Supprimer la reservation"
                data-lien="{{ path('admin_reservation_suppression', {'id': laReservation.id}) }}"
                ><i class="fa-solid fa-box-archive"></i></a>
            </td>
            </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

</div>
{% endblock %}
{% block javascripts %}
{% include "include/_modale.html.twig" %}
{% endblock %}
