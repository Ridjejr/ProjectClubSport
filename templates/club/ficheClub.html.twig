{% extends 'base.html.twig' %}

{% block title %}Fiche Club{% endblock %}

{% block body %}

	<h1 class="text-center pt-2">Fiche club</h1>
	<div class="row pt-2">
		{% set nbReservations = leClub.reservations|length %}
		<div class="card mb-3">
			<h4 class="card-header">{{leClub.ville}}</h4>
			<div class="row">
				<div class="col">
					<div class="card-body">
						<h5 class="card-title"></h5>
						<a href="" class="badge badge-success">{{nbReservations}}
							{% if nbReservations> 1 %}
								reservations
							{% else %}
								reservation
							{% endif %}
						</a>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{leClub.numrue}}</li>
						<li class="list-group-item">{{leClub.rue}}</li>
						<li class="list-group-item">{{leClub.cp}}</li>
					</ul>
				</div>
			</div>


			<div class="card-body">
				<a href="#" class="card-link">Card link</a>
				<a href="#" class="card-link">Another link</a>
			</div>
			<div class="card-footer text-muted">
				2 days ago
			</div>
		</div>
	</div>
{% endblock %}

