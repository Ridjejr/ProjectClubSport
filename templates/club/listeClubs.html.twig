{% extends 'base.html.twig' %}

{% block title %}Clubs de Magic Park{% endblock %}

{% block body %}
<h3 class="pt-2 text-center">TROUVER UN CLUB</h3>
<hr>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col-1">Adresse</th>
            <th scope="col-2">Code Postale</th>
            <th scope="col-7">Ville</th>
        </tr>
    </thead>
    <tbody>
{% for leClub in lesClubs %}
        <tr>
            <th scope="col-1">{{ leClub.numRue}} rue {{ leClub.rue}}</th>
            <th scope="col-2">{{ leClub.CP}}</th>
            <th scope="col-7">{{ leClub.ville}}</th>
        </tr>
{% endfor %}
  </tbody>
</table>
{% endblock %}

